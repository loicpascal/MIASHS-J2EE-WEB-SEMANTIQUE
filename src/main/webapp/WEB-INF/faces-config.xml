<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <render-kit>
        <renderer>
            <component-family>javax.faces.Input</component-family>
            <renderer-type>javax.faces.File</renderer-type>
            <renderer-class>fr.uga.miashs.sempic.util.MultipleFileRenderer</renderer-class>
        </renderer>
    </render-kit>
    
    <!-- USER -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/public/create-user.xhtml</from-view-id>
        <from-action>#{userController.create}</from-action>
        <navigation-case>
            <if>#{sessionTools.isAdmin()}</if>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/list-users.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <if>#{sessionTools.isNotLogged()}</if>
            <from-outcome>success</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/public/create-user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/admin/list-users.xhtml</from-view-id>
        <from-action>#{userController.delete}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/list-users.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/admin/list-users.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/admin/list-users.xhtml</from-view-id>
        <from-action>#{userController.delete}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/list-users.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/admin/list-users.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <!-- GROUP -->
    <navigation-rule>
        <from-view-id>/user/create-group.xhtml</from-view-id>
        <from-action>#{groupController.create}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/list-groups.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/create-group.xhtml</to-view-id>
      </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/user/update-group.xhtml</from-view-id>
        <from-action>#{updateGroup.update}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/list-groups.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/update-group.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>groupId</name>
                    <value>#{updateGroup.current.id}</value>
                </view-param>
            </redirect>
      </navigation-case>
    </navigation-rule>
    
    <!-- ALBUM -->
    <navigation-rule>
        <from-view-id>/user/create-album.xhtml</from-view-id>
        <from-action>#{albumController.create}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/create-album.xhtml</to-view-id>
      </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/user/update-album.xhtml</from-view-id>
        <from-action>#{updateAlbum.update}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/update-album.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>albumId</name>
                    <value>#{updateAlbum.current.id}</value>
                </view-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/update-album.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>albumId</name>
                    <value>#{updateAlbum.current.id}</value>
                </view-param>
            </redirect>
      </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-action>#{albumController.delete}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
      </navigation-case>
    </navigation-rule>
    
    <!-- PHOTO -->
    <navigation-rule>
        <from-view-id>/user/update-photo.xhtml</from-view-id>
        <from-action>#{updatePhoto.update}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/update-photo.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>photoId</name>
                    <value>#{updatePhoto.current.id}</value>
                </view-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/update-photo.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>photoId</name>
                    <value>#{updatePhoto.current.id}</value>
                </view-param>
            </redirect>
      </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/user/view-album.xhtml</from-view-id>
        <from-action>#{photoController.delete}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/view-album.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>albumId</name>
                    <value>#{photoController.current.album.id}</value>
                </view-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/view-album.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>albumId</name>
                    <value>#{photoController.current.album.id}</value>
                </view-param>
            </redirect>
      </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/user/update-photo.xhtml</from-view-id>
        <from-action>#{updatePhoto.addAnnotation}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/update-photo.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>photoId</name>
                    <value>#{updatePhoto.current.id}</value>
                </view-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/update-photo.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>photoId</name>
                    <value>#{updatePhoto.current.id}</value>
                </view-param>
            </redirect>
      </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/user/update-photo.xhtml</from-view-id>
        <from-action>#{updatePhoto.deleteAnnotation}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/update-photo.xhtml</to-view-id>
            <redirect include-view-params="true">
                <view-param>
                    <name>photoId</name>
                    <value>#{updatePhoto.current.id}</value>
                </view-param>
            </redirect>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
