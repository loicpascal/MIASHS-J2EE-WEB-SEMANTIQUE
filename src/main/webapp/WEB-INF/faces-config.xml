<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
        <render-kit>  
        <renderer>  
            <component-family>javax.faces.Input</component-family>  
            <renderer-type>javax.faces.File</renderer-type>  
            <renderer-class>fr.uga.miashs.sempic.util.MultipleFileRenderer</renderer-class>  
        </renderer>  
    </render-kit> 
    
    <!-- USER -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>create-user</from-outcome>
            <to-view-id>/public/create-user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-action>#{userController.create}</from-action>
        <navigation-case>
            <if>#{sessionTools.isAdmin()}</if>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/list-users.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <if>#{sessionTools.isNotLogged()}</if>
            <from-outcome>success</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/public/create-user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- ALBUM -->
    <navigation-rule>
        <from-action>#{albumController.create}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/create-album.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-action>#{updateAlbum.update}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-action>#{albumController.delete}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- PHOTO -->
    <navigation-rule>
        <from-action>#{photoController.delete}</from-action>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/list-albums.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- SEARCH -->

</faces-config>
